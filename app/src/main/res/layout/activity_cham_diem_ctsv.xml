<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CanBoPhongCTHSSV.ChamDiemCTSVActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="THÔNG TIN NGƯỜI DÙNG"
            android:textColor="#3F51B5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvIDuserCTSV"
            android:hint="ID: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />
        <TextView
            android:id="@+id/tvHotenCTSV"
            android:hint="Họ tên: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/tvEmailCTSV"
            android:hint="Email: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/tvVaitroCTSV"
            android:hint="Vai trò: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Điểm của bạn là:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtdiemCTSV"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <!--            <Button-->
            <!--                android:id="@+id/btnShow"-->
            <!--                android:text="XEM"-->
            <!--                android:layout_width="80dp"-->
            <!--                android:layout_height="wrap_content"></Button>-->
            <Button
                android:id="@+id/btnSaveCTSV"
                android:text="LƯU"
                android:layout_width="90dp"
                android:layout_height="wrap_content"></Button>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ExpandableListView
            android:childDivider="#ffff"
            android:listSelector="#333030"
            android:dividerHeight="2dp"
            android:divider="#992424"
            android:padding="5dp"
            android:id="@+id/exDanhmuctieuchiCTSV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

</LinearLayout>