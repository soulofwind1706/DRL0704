<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Admin.UpdateUserActivity">
    <TextView
        android:layout_gravity="center"
        android:text="CẬP NHẬT THÔNG TIN"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Tên user: "
            android:textSize="20dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edttenupuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Email user: "
            android:textSize="20dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtemailupuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Pass user: "
            android:textSize="20dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtpassupuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="ID role user: "
            android:textSize="20dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtidroleupuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="ID lớp user: "
            android:textSize="20dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtidlopupuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="UPDATE"
            android:id="@+id/btnuserup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:text="EXIT"
            android:id="@+id/btnexitup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>